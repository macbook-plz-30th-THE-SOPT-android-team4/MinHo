<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoptExampleProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Button, not Selector -->
    <style name="Widget.SignButton.Style" parent="">
        <item name="android:background">@drawable/shape_bordor_radius_5</item>
        <item name="android:textAppearance">@style/Widget.SignButton.TextAppearance</item>
    </style>

    <style name="Widget.SignButton.TextAppearance" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_3</item>
    </style>


    <style name="Widget.BasicButton.Style" parent="">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/shape_border_color_radius_5</item>
        <item name="android:textAppearance">@style/Widget.BasicButton.TextAppearance</item>
    </style>

    <style name="Widget.BasicButton.TextAppearance" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_3</item>
    </style>

    <!-- Button, Selector -->
    <style name="Widget.SelectButton.Style" parent="">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/app_base_space</item>
        <item name="android:background">@drawable/shape_border_selector_btn_radius_5</item>
        <item name="android:textAppearance">@style/Widget.SelectButton.TextAppearance</item>
    </style>

    <style name="Widget.SelectButton.TextAppearance" parent="">
        <item name="android:textColor">@color/selector_btn_text</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_3</item>
    </style>

    <!-- Just TextView Global Style -->
    <style name="Widget.TitleTextView.Style" parent="">
        <item name="android:textAppearance">@style/Widget.TitleTextView.TextAppearance</item>
    </style>

    <style name="Widget.TitleTextView.TextAppearance" parent="">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_4</item>
    </style>

    <!-- EditText Selector Style -->
    <style name="Widget.EditView.Style" parent="">
        <item name="android:background">@drawable/shape_bordor_selector_radius_5</item>
        <item name="android:paddingHorizontal">@dimen/app_sub_space</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:textAppearance">@style/Widget.EditView.TextAppearance</item>
    </style>

    <style name="Widget.EditView.TextAppearance" parent="">
        <item name="android:textColor">@color/gray_900</item>
        <item name="android:fontFamily">@font/noto_bold</item>
        <item name="android:textSize">@dimen/font_size_4</item>

        <item name="android:textColorHint">@color/gray_500</item>
    </style>

</resources>