<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".week3.Fragment.PagerFragmentProfile">

    <ImageView
        android:id="@+id/imageViewCoil"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvImage"
        style="@style/Widget.TitleTextView.Style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/font_size_2"
        android:text="사진을 첨부해주세요"
        app:layout_constraintTop_toBottomOf="@id/imageViewCoil" />

    <Button
        android:id="@+id/btnUpload"
        style="@style/Widget.SignButton.Style"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/app_base_space"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/sopt_main_purple"
        android:text="첨부하기"
        app:layout_constraintTop_toBottomOf="@id/tvImage" />
</androidx.constraintlayout.widget.ConstraintLayout>